<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="@dimen/padding_min">

    <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/list_item_bg_color">

        <TextView
            android:id="@+id/recipe_step_text_view"
            style="@style/GeneralTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/recipe_fragment_list_item_height"
            android:layout_marginStart="@dimen/margin_large"
            android:textSize="@dimen/text_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Combine dry ingredients" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>